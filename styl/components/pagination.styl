.pagination
	@extends .clearfix
	position relative
	overflow hidden
	
	text-align left
	
	ul
		position relative
		float left
		left 50%
		margin-top lineHeight
		
		list-style none
	li
		position relative
		float left
		right 50%
		margin 0 .3em
		padding .2em .3em
		min-width 4em
		
		background-color baseColorBackground
		border-radius 3px
		
		text-align center
		font-size .9em
		
		&:hover
			background-color baseColorLight
			
		&.number
			display none
			
		&.current
			background-color baseColorLight
			a
				color offWhite
					
	a
		display block
		color gray
		text-decoration none
		
		&:hover
			color offWhite
		
	@media daddy
		li
			font-size 1em
	
	@media daddyOnly
		li
			min-width 2em
		li.number
			display block