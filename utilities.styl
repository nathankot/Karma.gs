/*
Basic helpers that everyone needs

Use like this:
    
    .element
      clearfix()

It will actually _extend_ the clearfix
class, rather than duplicating it.
====================================== */

.clearfix
  *zoom:1
  &:before,
  &:after
    content:""
    display:table
  &:after
    clear:both

clearfix()
  @extends .clearfix


.ir
  font unquote('0/0 a')
  color transparent
  text-shadow none
  background-color transparent
  border 0

image-replacement()
  @extends .ir
hide-text()
  @extends .ir


.hidden
  display none!important
  visibility hidden

hidden()
  @extends .hidden
