/*
Basic helpers that everyone needs

Use like this:
    
    .element
      @extends .clearfix

This will save you a couple of bytes.
====================================== */

clearfix()
  *zoom:1
  &:before,
  &:after
    content:""
    display:table
  &:after
    clear:both
.clearfix
  clearfix()

hidden()
  display none!important
  visibility hidden
.hidden
  hidden()
