@import 'reset'
@import 'utilities'
@import 'defaults'
@import 'layouting'
@import 'typography'

html
body
  height 100%
  font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
  color white

body
  background-color #FF7000

.content
.grid
  height 100%
  width 100%

.content
  position absolute
  z-index 3

section
  display block
  position relative
  height 100%

  h1
    float left
    width 20em
    margin 3em

  &#one
    background-color #00A894

  &#two
    background-color #8502FF

  &#three
    background-color #0290FF

  &#four
    background-color #FF7000


/* GRIDZ */
.grid-background
  position fixed
  display block
  width 100%
  height 100%
  z-index 2

  > div
    position absolute
    height 100%
    background-color rgba(255,255,255,0.2)
    border-right 1px solid rgba(255,255,255,0.1)

  .baby
    width 30em

  .daddy
    width 60em

.grid-sections
  height 100%
  z-index 1